[Unit]
Description=Perform a bios reset if the GPIO changed
Before=obmc-flash-bios-init.service
After=xyz.openbmc_project.Software.BMC.Updater.service

[Service]
Type=oneshot
RemainAfterExit=no
ExecStart=/usr/bin/obmc-flash-bios bios-reset-check

[Install]
WantedBy=org.open_power.Software.Host.Updater.service
